<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="217dp">

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="@drawable/xml_background1"
            android:id="@+id/textView6"
            android:layout_weight="0.14" />

        <ImageView
            android:id="@+id/staff_image"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="57dp"
            android:background="@drawable/xml_background1"
            android:layout_weight="0.32" />

        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:layout_marginTop="56dp"
            android:background="@drawable/xml_background1"
            android:id="@+id/textView7"
            android:layout_weight="0.34" />
    </LinearLayout>

    <TableLayout
        android:background="@drawable/xml_background1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="5pt"
                android:text=""
                android:background="@drawable/xml_background1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="직원 상세"
                android:background="@drawable/xml_background1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </TableRow>


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="아이디"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:id="@+id/textId"
                android:layout_weight="0.37" />

            <TextView
                android:text="TextView"
                android:gravity="left"
                android:textSize="10pt"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textIdView"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="이름"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:id="@+id/textName"
                android:layout_weight="0.37" />

            <TextView
                android:gravity="left"
                android:textSize="10pt"
                android:text="TextView"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textNameView"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="직급"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:id="@+id/textRank"
                android:layout_weight="0.37" />
            <TextView
                android:textSize="10pt"
                android:text="TextView"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textRankView"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="부서"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:id="@+id/textDept"
                android:layout_weight="0.37" />
            <TextView
                android:textSize="10pt"
                android:text="TextView"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textDeptView"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="전화"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:id="@+id/textPhone"
                android:layout_weight="0.37" />
            <TextView
                android:textIsSelectable="true"
                android:textSize="10pt"
                android:text="TextView"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textPhoneView"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text="메일"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="20pt"
                android:id="@+id/textMail"
                android:layout_weight="0.37" />
            <TextView
                android:textIsSelectable="true"
                android:textSize="10pt"
                android:text="TextView"
                android:background="@drawable/xml_border"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/textMailView"
                android:layout_weight="1" />
        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:text="Coll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coll_ph" />

            <TextView
                android:gravity="center"
                android:textSize="10pt"
                android:text=""
                android:background="@drawable/xml_background1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:text="Mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/coll_mail" />
        </TableRow>
    </TableLayout>

</LinearLayout>